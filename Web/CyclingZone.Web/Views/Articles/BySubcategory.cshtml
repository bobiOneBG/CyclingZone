@model CyclingZone.Web.ViewModels.Site.Articles.ArticlesAllSubcategoryViewModel

@{
    ViewData["Title"] = Model.Subcategory.Name;
}

<h5><span class="text-danger">Home</span> /
    <span class="text-danger">@Model.CategoryName</span> / @Model.Subcategory.Name</h5>

<h1>@Model.Subcategory.Name</h1>

<h4 class="mb-5">@Model.Subcategory.Description</h4>

@foreach (var article in Model.Articles)
{
<div class="card mb-lg-5" style="max-width: 840px">
    <div class="row g-0">
        <div class="col-md-6">
            <img src="@article.ImageUrl"
                 alt="No image"
                 class="img-fluid" />
        </div>
        <div class="col-md-6 accept-policy">
            <div class="card-body">
                <h5 class="card-title">@article.Title</h5>
                <p class="card-text">
                    @article.Subtitle
                </p>
            </div>
        </div>
    </div>
    <a class="stretched-link" asp-area="" asp-controller="Articles" asp-action="ById" asp-route-id="@article.Id"></a>
</div>
}
